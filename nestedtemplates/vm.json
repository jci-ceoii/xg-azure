{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmSize": {
            "type": "string"
        },
        "adminPassword": {
            "type": "string"
        },
        "imageSku": {
            "type": "string"
        },
        "availabilitySetId": {
            "type": "string"
        },
        "storageAccountEndpoint": {
            "type": "string"
        },
        "interfaceRefWan": {
            "type": "string"
        },
        "interfaceRefLan": {
            "type": "string"
        },
        "location":{
            "type": "string"
        }
    },
    "variables": {
        "imageId": "[/subscriptions/3d49a8e4-6680-4dad-a36d-f557ea620a61/resourceGroups/cn-fw3-rg/providers/Microsoft.Compute/images/sophosxg-v18_0_mr5]"
    },
    "resources": [
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[parameters('location')]",
            "properties": {
                "availabilitySet": {
                    "id": "[parameters('availabilitySetId')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[variables('ImageId')]"
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(parameters('vmName'),'-dataDisk')]",
                            "lun": 0,
                            "createOption": "FromImage",
                            "managedDisk": {
                                "storageAccountType": "Standard_LRS"
                            }
                        }
                    ],
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),'-osDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('interfaceRefWan')]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[parameters('interfaceRefLan')]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[parameters('storageAccountEndpoint')]"
                    }
                }
            }
        }
    ]
}
